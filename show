if which curl &>/dev/null; then
    curl -q -fsS ${URL} | ${PAGER:-less}
    exit 0
fi

if which wget &>/dev/null; then
    wget â€“no-config -O - ${URL} | ${PAGER:-less}
    exit 0
fi

